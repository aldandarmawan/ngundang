<section id="Page1" class="min-h-screen w-full relative">
    <!-- <div class="columns-2 sm:columns-5 gap-3"> -->
    <div
        class="justify-center grid grid-cols-1 md:grid-cols-5 gap-4 min-w-5/6 absolute"
        style="top: 50%; left: 50%; transform: translate(-50%, -50%)"
    >
        <div class="md:col-span-2 p-4 border border-primary">
            <h1 class="text-center text-4xl text-secondary mb-5">
                <span class="font-cursive">ayo</span>&nbsp;<span>NGUNDANG</span>
            </h1>
            <form id="formNgundang">
                <div class="mb-5">
                    <label class="text-gray-500">Nama Penerima Undangan</label>
                    <input
